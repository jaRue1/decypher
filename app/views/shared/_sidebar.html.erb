<aside class="fixed left-0 top-0 h-screen w-64 bg-slate-900 border-r border-slate-700 flex flex-col transition-all duration-300"
       data-sidebar-target="sidebar">
    <!-- Header with Logo -->
    <div class="p-4 border-b border-slate-700" data-sidebar-target="header">
      <div class="flex items-center gap-3" data-sidebar-target="logoContainer">
        <%= image_tag "logo.png", alt: "Decypher", class: "w-10 h-10 rounded-lg flex-shrink-0" %>
        <div data-sidebar-target="logoText" class="min-w-0">
          <span class="font-mono font-bold text-slate-100 text-lg tracking-wider">DECYPHER</span>
          <span class="block font-mono text-xs text-slate-500 uppercase tracking-widest">Life OS</span>
        </div>
      </div>
    </div>

    <!-- Toggle Button -->
    <div class="px-4 py-2 border-b border-slate-700">
      <button data-action="click->sidebar#toggle"
              class="w-full flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-800 transition-colors text-slate-400 hover:text-slate-200"
              data-sidebar-target="toggleButton"
              title="Toggle sidebar">
        <svg class="w-5 h-5 transition-transform duration-300 flex-shrink-0" data-sidebar-target="toggleIcon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        <span class="font-mono text-xs" data-sidebar-target="navText">Collapse</span>
      </button>
    </div>

    <!-- Navigation -->
    <nav class="flex-1 p-4 space-y-2 overflow-y-auto">
      <span class="font-mono text-xs uppercase tracking-widest text-slate-500 px-3 block mb-4" data-sidebar-target="navText">Navigation</span>

      <%= link_to profile_path, class: "flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-800 transition-colors group #{'bg-slate-800 text-blue-400' if request.path == '/profile'}", title: "Profile" do %>
        <svg class="w-5 h-5 text-slate-400 group-hover:text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <span class="font-mono text-sm text-slate-300 group-hover:text-slate-100" data-sidebar-target="navText">Profile</span>
      <% end %>

      <%= link_to root_path, class: "flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-800 transition-colors group #{'bg-slate-800 text-blue-400' if current_page?(root_path)}", title: "Dashboard" do %>
        <svg class="w-5 h-5 text-slate-400 group-hover:text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
        </svg>
        <span class="font-mono text-sm text-slate-300 group-hover:text-slate-100" data-sidebar-target="navText">Dashboard</span>
      <% end %>

      <%= link_to missions_path, class: "flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-800 transition-colors group #{'bg-slate-800 text-blue-400' if request.path.start_with?('/missions')}", title: "Missions" do %>
        <svg class="w-5 h-5 text-slate-400 group-hover:text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
        <span class="font-mono text-sm text-slate-300 group-hover:text-slate-100" data-sidebar-target="navText">Missions</span>
      <% end %>

      <%= link_to goals_path, class: "flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-800 transition-colors group #{'bg-slate-800 text-blue-400' if request.path.start_with?('/goals')}", title: "Goals" do %>
        <svg class="w-5 h-5 text-slate-400 group-hover:text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"></path>
        </svg>
        <span class="font-mono text-sm text-slate-300 group-hover:text-slate-100" data-sidebar-target="navText">Goals</span>
      <% end %>

      <%= link_to habits_path, class: "flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-800 transition-colors group #{'bg-slate-800 text-blue-400' if request.path.start_with?('/habits')}", title: "Habits" do %>
        <svg class="w-5 h-5 text-slate-400 group-hover:text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
        </svg>
        <span class="font-mono text-sm text-slate-300 group-hover:text-slate-100" data-sidebar-target="navText">Habits</span>
      <% end %>

      <%= link_to daily_entries_path, class: "flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-800 transition-colors group #{'bg-slate-800 text-blue-400' if request.path.start_with?('/daily_entries')}", title: "Journal" do %>
        <svg class="w-5 h-5 text-slate-400 group-hover:text-blue-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <span class="font-mono text-sm text-slate-300 group-hover:text-slate-100" data-sidebar-target="navText">Journal</span>
      <% end %>

    </nav>

    <!-- User -->
    <div class="p-4 border-t border-slate-700">
      <div class="flex items-center gap-3 px-3 py-2" data-sidebar-target="navItem">
        <%= link_to profile_path, class: "flex items-center gap-3 flex-1 min-w-0 hover:opacity-80 transition-opacity", title: Current.user&.email_address do %>
          <div class="w-8 h-8 bg-slate-700 rounded-full flex items-center justify-center flex-shrink-0">
            <span class="font-mono text-xs text-slate-300"><%= Current.user&.email_address&.first&.upcase %></span>
          </div>
          <div class="flex-1 min-w-0" data-sidebar-target="userInfo">
            <span class="block font-mono text-xs text-slate-300 truncate"><%= Current.user&.email_address %></span>
            <span class="block font-mono text-xs text-blue-400">L<%= Current.user&.power_level || 0 %></span>
          </div>
        <% end %>
        <span data-sidebar-target="userInfo">
          <%= button_to "Logout", session_path, method: :delete, class: "text-slate-500 hover:text-slate-300 text-xs" %>
        </span>
      </div>
    </div>
  </aside>
