<aside class="fixed left-0 top-0 h-screen w-64 bg-slate-900 border-r border-slate-700 flex flex-col">
    <!-- Logo -->
    <div class="p-6 border-b border-slate-700">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center">
          <span class="font-mono font-bold text-white text-lg">D</span>
        </div>
        <div>
          <span class="font-mono font-bold text-slate-100 text-lg tracking-wider">DECYPHER</span>
          <span class="block font-mono text-xs text-slate-500 uppercase tracking-widest">Life OS</span>
        </div>
      </div>
    </div>

    <!-- Navigation -->
    <nav class="flex-1 p-4 space-y-2">
      <span class="font-mono text-xs uppercase tracking-widest text-slate-500 px-3 block mb-4">Navigation</span>

      <%= link_to root_path, class: "flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-800 transition-colors group #{'bg-slate-800
   text-blue-400' if current_page?(root_path)}" do %>
        <svg class="w-5 h-5 text-slate-400 group-hover:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0
  01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0
  01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
        </svg>
        <span class="font-mono text-sm text-slate-300 group-hover:text-slate-100">Dashboard</span>
      <% end %>

      <%= link_to "missions", class: "flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-800 transition-colors group" do %>
        <svg class="w-5 h-5 text-slate-400 group-hover:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2
  0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0
  01-2-2z"></path>
        </svg>
        <span class="font-mono text-sm text-slate-300 group-hover:text-slate-100">Missions</span>
      <% end %>

      <%= link_to "skills", class: "flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-slate-800 transition-colors group" do %>
        <svg class="w-5 h-5 text-slate-400 group-hover:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        <span class="font-mono text-sm text-slate-300 group-hover:text-slate-100">Skills</span>
      <% end %>
    </nav>

    <!-- User -->
    <div class="p-4 border-t border-slate-700">
      <div class="flex items-center gap-3 px-3 py-2">
        <div class="w-8 h-8 bg-slate-700 rounded-full flex items-center justify-center">
          <span class="font-mono text-xs text-slate-300"><%= Current.user&.email_address&.first&.upcase %></span>
        </div>
        <div class="flex-1 min-w-0">
          <span class="block font-mono text-xs text-slate-300 truncate"><%= Current.user&.email_address %></span>
        </div>
        <%= button_to "Logout", session_path, method: :delete, class: "text-slate-500 hover:text-slate-300 text-xs" %>
      </div>
    </div>
  </aside>