  <div class="p-8">
    <!-- Header -->
    <div class="flex items-start justify-between mb-8">
      <div>
        <h1 class="font-mono text-xs uppercase tracking-widest text-slate-500 mb-1">Mission Control</h1>
        <p class="font-mono text-2xl text-slate-100">Welcome back, Operator</p>
      </div>
      <div class="text-right">
        <span class="font-mono text-xs uppercase tracking-widest text-slate-500 block">System Status</span>
        <span class="inline-flex items-center gap-2 mt-1">
          <span class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></span>
          <span class="font-mono text-sm text-emerald-400">Online</span>
        </span>
      </div>
    </div>

    <!-- Power Level & Octagon -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
      <!-- Octagon Visualization -->
      <div class="lg:col-span-2 bg-slate-900 border border-slate-700 rounded-lg p-6">
        <span class="font-mono text-xs uppercase tracking-widest text-slate-500 block mb-4">Domain Overview</span>
       <div class="flex items-center justify-center">
          <div class="w-full max-w-lg">
          <%= render "shared/octagon", domains: @domains, user_domains: @user_domains, power_level: @power_level %>
        </div>
        </div>
      </div>

      <!-- Stats Panel -->
      <div class="space-y-4">
        <div class="bg-slate-900 border border-slate-700 rounded-lg p-6">
          <span class="font-mono text-xs uppercase tracking-widest text-slate-500 block mb-2">Power Level</span>
          <span class="font-mono text-5xl text-blue-400 block"><%= @power_level %></span>
          <div class="mt-3 h-2 bg-slate-800 rounded-full overflow-hidden">
            <div class="h-full bg-gradient-to-r from-blue-600 to-cyan-400" style="width: <%= @power_level %>%"></div>
          </div>
        </div>

        <div class="bg-slate-900 border border-slate-700 rounded-lg p-6">
          <span class="font-mono text-xs uppercase tracking-widest text-slate-500 block mb-2">Domains Active</span>
          <span class="font-mono text-3xl text-slate-100"><%= @user_domains.count %></span>
          <span class="font-mono text-slate-500">/ 8</span>
        </div>

        <div class="bg-slate-900 border border-slate-700 rounded-lg p-6">
          <span class="font-mono text-xs uppercase tracking-widest text-slate-500 block mb-2">Active Missions</span>
          <span class="font-mono text-3xl text-amber-400">0</span>
        </div>
      </div>
    </div>

    <!-- Domain Grid -->
    <div class="mb-4">
      <span class="font-mono text-xs uppercase tracking-widest text-slate-500">All Domains</span>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <% @domains.each do |domain| %>
        <% user_domain = @user_domains[domain.id] %>
        <%= link_to domain_path(domain.slug), class: "bg-slate-900 border border-slate-700 rounded-lg p-4 hover:border-blue-500
  transition-all hover:shadow-lg hover:shadow-blue-500/10 block group" do %>
          <div class="flex items-center justify-between mb-3">
            <span class="font-mono text-xs uppercase tracking-widest text-slate-400"><%= domain.name %></span>
            <% if user_domain %>
              <span class="font-mono text-xs text-emerald-400 bg-emerald-400/10 px-2 py-1 rounded">L<%= user_domain.level %></span>
            <% end %>
          </div>
          <% if user_domain %>
            <div class="font-mono text-lg text-slate-100 mb-1 group-hover:text-blue-400 transition-colors"><%=
             domain.level_titles[user_domain.level.to_s] %></div>
            <div class="h-1 bg-slate-800 rounded-full overflow-hidden mt-3">
              <div class="h-full bg-blue-500" style="width: <%= (user_domain.level / 6.0 * 100).round %>%"></div>
            </div>
          <% else %>
            <div class="text-sm text-slate-500">Not configured</div>
            <div class="mt-3 font-mono text-xs text-blue-400 opacity-0 group-hover:opacity-100 transition-opacity">Click to set up â†’</div>
          <% end %>
        <% end %>
      <% end %>
    </div>