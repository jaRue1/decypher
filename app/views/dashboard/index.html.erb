<div class="p-8">
    <div class="mb-8">
      <span class="font-mono text-xs uppercase tracking-widest text-slate-400">Power Level</span>
      <span class="block font-mono text-5xl text-blue-400"><%= @power_level %></span>
    </div>

    <h2 class="font-mono text-lg text-slate-100 mb-4">Domains</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <% @domains.each do |domain| %>
        <% user_domain = @user_domains[domain.id] %>
        <%= link_to domain_path(domain.slug), class: "bg-slate-900 border border-slate-700 rounded-lg p-4 hover:border-blue-500
  transition-colors block" do %>
          <div class="flex items-center justify-between mb-3">
            <span class="font-mono text-xs uppercase tracking-widest text-slate-400"><%= domain.name %></span>
            <% if user_domain %>
              <span class="font-mono text-xs text-emerald-400">L<%= user_domain.level %></span>
            <% end %>
          </div>
          <% if user_domain %>
            <div class="font-mono text-lg text-slate-100"><%= domain.level_titles[user_domain.level.to_s] %></div>
          <% else %>
            <div class="text-sm text-slate-400">Not set up</div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>