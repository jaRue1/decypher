<div>
<div class="min-h-screen flex items-center justify-center">
    <div class="bg-slate-900 border border-slate-700 rounded-lg p-8 w-full max-w-md">
      <h1 class="font-mono text-2xl text-slate-100 mb-6">Sign up</h1>

      <%= form_with model: @user, url: sign_up_path, class: "space-y-4" do |f| %>
        <% if @user.errors.any? %>
          <div class="bg-red-900/50 border border-red-500 rounded p-4 mb-4">
            <% @user.errors.full_messages.each do |error| %>
              <p class="text-red-400 text-sm"><%= error %></p>
            <% end %>
          </div>
        <% end %>

        <div>
          <label for="email_address" class="block font-mono text-xs uppercase tracking-widest text-slate-400 mb-2">
            Email
          </label>
          <%= f.email_field :email_address,
              id: "email_address",
              placeholder: "Enter your email",
              class: "w-full bg-slate-800 border border-slate-600 rounded px-4 py-2 text-slate-100 placeholder-slate-500 focus:outline-none
  focus:border-blue-500" %>
        </div>

        <div>
          <label for="password" class="block font-mono text-xs uppercase tracking-widest text-slate-400 mb-2">
            Password
          </label>
          <%= f.password_field :password,
              id: "password",
              placeholder: "Enter your password",
              class: "w-full bg-slate-800 border border-slate-600 rounded px-4 py-2 text-slate-100 placeholder-slate-500 focus:outline-none
  focus:border-blue-500" %>
        </div>

        <div>
          <label for="password_confirmation" class="block font-mono text-xs uppercase tracking-widest text-slate-400 mb-2">
            Confirm Password
          </label>
          <%= f.password_field :password_confirmation,
              id: "password_confirmation",
              placeholder: "Confirm your password",
              class: "w-full bg-slate-800 border border-slate-600 rounded px-4 py-2 text-slate-100 placeholder-slate-500 focus:outline-none
  focus:border-blue-500" %>
        </div>

        <%= f.submit "Sign up",
            class: "w-full bg-blue-600 hover:bg-blue-500 text-white font-mono uppercase tracking-wide text-sm px-4 py-2 rounded
  transition-colors cursor-pointer" %>
      <% end %>

      <p class="mt-6 text-slate-400 text-sm">
        Already have an account?
        <%= link_to "Sign in", new_session_path, class: "text-blue-400 hover:text-blue-300" %>
      </p>
    </div>
  </div>
</div>
