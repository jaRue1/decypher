      </div>
      <h3 class="font-mono text-lg text-emerald-400 mb-2">Badge Earned</h3>
      <p class="font-mono text-slate-100"><%= @mission.badge.name %></p>
      <p class="text-slate-400 text-sm mt-1"><%= @mission.badge.description %></p>
    </div>
  <% end %>
</div>
