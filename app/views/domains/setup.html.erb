<div class="p-8 max-w-2xl mx-auto">
    <%= link_to "â† Back", domain_path(@domain.slug), class: "text-slate-400 hover:text-slate-200 text-sm" %>

    <h1 class="font-mono text-2xl text-slate-100 mt-6">Set Up <%= @domain.name %></h1>
    <p class="text-slate-400 mt-2">Answer a few questions to assess your current level.</p>

    <%= form_with url: complete_setup_domain_path(@domain.slug), method: :post, class: "mt-8 space-y-6" do |f| %>

      <div class="bg-slate-900 border border-slate-700 rounded-lg p-6">
        <label for="level" class="block font-mono text-xs uppercase tracking-widest text-slate-400 mb-3">
          How would you rate yourself in <%= @domain.name %>? (1-6)
        </label>
        <select name="level" id="level" class="w-full bg-slate-800 border border-slate-600 rounded px-4 py-2 text-slate-100 focus:outline-none
  focus:border-blue-500">
          <% @domain.level_titles.each do |level, title| %>
            <option value="<%= level %>">L<%= level %> - <%= title %></option>
          <% end %>
        </select>
      </div>

      <div class="bg-slate-900 border border-slate-700 rounded-lg p-6">
        <label for="responses_situation" class="block font-mono text-xs uppercase tracking-widest text-slate-400 mb-3">
          What's your current situation in <%= @domain.name %>?
        </label>
        <textarea name="responses[situation]" id="responses_situation" rows="3"
          class="w-full bg-slate-800 border border-slate-600 rounded px-4 py-2 text-slate-100 placeholder-slate-500 focus:outline-none
  focus:border-blue-500"
          placeholder="Describe where you are now..."></textarea>
      </div>

      <div class="bg-slate-900 border border-slate-700 rounded-lg p-6">
        <label for="responses_goal" class="block font-mono text-xs uppercase tracking-widest text-slate-400 mb-3">
          What's your biggest goal in <%= @domain.name %>?
        </label>
        <textarea name="responses[goal]" id="responses_goal" rows="3"
          class="w-full bg-slate-800 border border-slate-600 rounded px-4 py-2 text-slate-100 placeholder-slate-500 focus:outline-none
  focus:border-blue-500"
          placeholder="What do you want to achieve..."></textarea>
      </div>

      <%= f.submit "Complete Setup",
          class: "w-full bg-blue-600 hover:bg-blue-500 text-white font-mono uppercase tracking-wide text-sm px-4 py-2 rounded
  transition-colors cursor-pointer" %>
    <% end %>
  </div>
