<div class="p-8 max-w-xl">
  <%= link_to "â† Back to Habits", habits_path, class: "text-slate-400 hover:text-slate-200 text-sm" %>

  <div class="mt-6 mb-8">
    <h1 class="font-mono text-xs uppercase tracking-widest text-slate-500 mb-1">Edit Habit</h1>
    <p class="font-mono text-2xl text-slate-100"><%= @habit.name %></p>
  </div>

  <div class="bg-slate-900 border border-slate-700 rounded-lg p-6">
    <%= render "form", habit: @habit %>
  </div>

  <div class="mt-6 flex items-center gap-4">
    <%= button_to "Archive Habit", archive_habit_path(@habit),
        method: :post,
        data: { turbo_confirm: "Archive this habit? It will be hidden but your history is preserved." },
        class: "font-mono text-xs text-amber-400 hover:text-amber-300 px-3 py-2 border border-amber-700 rounded hover:border-amber-500 transition-colors" %>
    <%= button_to "Delete Habit", habit_path(@habit),
        method: :delete,
        data: { turbo_confirm: "Are you sure you want to delete this habit? This will remove all completion history." },
        class: "font-mono text-xs text-red-400 hover:text-red-300 px-3 py-2 border border-red-900 rounded hover:border-red-700 transition-colors" %>
  </div>
</div>
